<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbarStyle="insideInset"
    tools:ignore="SpeakableTextPresentCheck">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        android:minHeight="90dp"
        android:padding="16dp"
        android:scrollbarStyle="insideInset"
        android:verticalScrollbarPosition="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".Info_Fragment">

        <Button
            android:id="@+id/button_calor_extremo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:width="200dp"
            android:backgroundTint="#FF9800"
            android:text="@string/text_calor_extremo"
            android:visibility="visible"
            app:icon="@drawable/ic_baseline_whatshot_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.473"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_granizo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:backgroundTint="#FF9800"
            android:text="@string/text_granizo"
            android:visibility="visible"
            app:icon="@drawable/ic_baseline_grain_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_calor_extremo" />

        <Button
            android:id="@+id/button_tormenta_invernal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:backgroundTint="#FF9800"
            android:text="@string/text_tormenta_invernal"
            android:visibility="visible"
            app:icon="@drawable/ic_baseline_scatter_plot_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_granizo" />

        <Button
            android:id="@+id/button_tornado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:backgroundTint="#FF9800"
            android:text="@string/text_tornado"
            android:visibility="visible"
            app:icon="@drawable/ic_baseline_air_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_tormenta_invernal" />

        <Button
            android:id="@+id/button_inundacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:backgroundTint="#FF9800"
            android:text="@string/text_inundacion"
            android:visibility="visible"
            app:icon="@drawable/ic_baseline_pool_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_tornado" />

        <Button
            android:id="@+id/button_incendio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:backgroundTint="#FF9800"
            android:text="@string/text_incendio"
            android:visibility="visible"
            app:icon="@drawable/ic_fire_extinguisher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_inundacion" />

        <Button
            android:id="@+id/button_terremoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:backgroundTint="#FF9800"
            android:text="@string/text_terremoto"
            android:visibility="visible"
            app:icon="@drawable/ic_baseline_show_chart_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_incendio" />

        <Button
            android:id="@+id/button_tsunami"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:backgroundTint="#FF9800"
            android:text="@string/text_tsunami"
            android:visibility="visible"
            app:icon="@drawable/ic_baseline_waves_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_terremoto" />

        <Button
            android:id="@+id/button_avalancha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:backgroundTint="#FF9800"
            android:text="@string/text_avalancha"
            android:visibility="visible"
            app:icon="@drawable/ic_baseline_warning_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_tsunami" />

        <Button
            android:id="@+id/button_lluvia_acida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:backgroundTint="#FF9800"
            android:text="@string/text_lluvia_acida"
            android:visibility="visible"
            app:icon="@drawable/ic_baseline_science_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_avalancha" />

        <Button
            android:id="@+id/button_erupcion_volcanica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:backgroundTint="#FF9800"
            android:padding="10dp"
            android:text="@string/text_erupcion_volcanica"
            android:visibility="visible"
            app:icon="@drawable/ic_baseline_landscape_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_lluvia_acida" />

        <Button
            android:id="@+id/button_gota_fria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:backgroundTint="#FF9800"
            android:text="@string/text_gota_fria"
            android:visibility="visible"
            app:icon="@drawable/ic_baseline_opacity_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_erupcion_volcanica" />

        <Button
            android:id="@+id/button_tormenta_electrica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:backgroundTint="#FF9800"
            android:text="@string/text_tormenta_electrica"
            android:visibility="visible"
            app:icon="@drawable/ic_baseline_flash_on_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_gota_fria" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
